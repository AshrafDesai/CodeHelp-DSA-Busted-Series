#include <bits/stdc++.h> 
int findMinimumCost(string str) 
{
  if (str.length() % 2 == 1)
  {

      return -1;

  }
  stack<char> s;
  for (int i = 0; i < str.length(); i++)
  {
      if (str[i] == '{')
      {
          s.push(str[i]);
      }
      else
      {
          if (!s.empty() && s.top() == '{')
          {
              s.pop();
          } 
          else 
          {

              s.push(str[i]);
          }

      }

  }

 

  
      int a = 0; // for '{'

      int b = 0; // for '}'

 

      while (!s.empty())

      {

          if (s.top() == '{')

          {

              a++;

          }

          else

          {

              b++;

          }

          s.pop();

      }

 

      return ( (a + 1) / 2 + (b + 1) / 2 );

}
